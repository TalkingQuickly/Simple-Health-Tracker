<h1><%= @day.date %></h1>
<table id="score_breakdown">
	<tr>
		<td>
			<strong>Category</strong>
		</td>
		<td  class="score_column">
			<strong>Score</strong>
		</td>
	</tr>
	<tr>
		<td>	
			Fruit and Veg
		</td>
		<td class="score_column">
			<%= @day.food_veg_actual %></p>
		</td>
	</tr>
	<tr>
		<td>	
			Junk Food
		</td>
		<td class="score_column">
			<%= @day.food_junk_actual  %></p>
		</td>
	</tr>
	<tr>
		<td>	
			Sleep
		</td>
		<td class="score_column">
			<%= @day.hours_sleep_actual  %></p>
		</td>
	</tr>
	<tr>
		<td>	
			Exercise
		</td>
		<td class="score_column">
			<%= @day.exercise_actual  %></p>
		</td>
	</tr>
	<tr>
		<td>	
			Smoking
		</td>
		<td class="score_column">
			<%= @day.smoke_actual  %></p>
		</td>
	</tr>
	<tr>
		<td>	
			Drinking
		</td>
		<td class="score_column">
			<%= @day.drinks_actual  %></p>
		</td>
	</tr>
	<tr>
		<td>	
			<strong>Total</strong>
		</td>
		<td class="score_column">
			<strong><%= @day.score  %></p></strong>
		</td>
	</tr>
</table>


<div class="form-actions">
<%= link_to "Back", days_path, :class => 'btn'  %>
<%= link_to "Edit", edit_day_path(@day), :class => 'btn' %>
<%= link_to "Delete", day_path(@day), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>
